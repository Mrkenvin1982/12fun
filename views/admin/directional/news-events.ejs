<div class="main-page" id="NewsEvents" style="display: none">
    <div class="tables">
        <div class="table-responsive bs-example widget-shadow">
            <h4>Tin tức, sự kiện</h4>
            <div class="sub_home">
                <input type="button" class="btn btn-primary" onclick="searchNewsEvents('0','1')" value="Tin tức">
                <input type="button" class="btn btn-primary" onclick="searchNewsEvents('1','1')" value="Sự kiện">
                <div class="clearfix">

                </div>
            </div>
            <br>
            <form id="from-News-Events">
                <table id="tblNews-Events" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tiêu đề</th>
                            <th>Kiểu</th>
                            <th>Nội dung</th>
                            <th>Ngày đăng</th>
                            <th>
                                <input type="checkbox" id="ckAll" />
                            </th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyNewsEvents">

                    </tbody>
                </table>
            </form>
            <div class="form-group" id="messageError2" style="display: none;">
                <label for="exampleInputEmail1" id="lblMessage2" style="color: red; font-weight: bold">

                </label>
            </div>
            <div class="sub_home">
                <input type="button" class="btn btn-primary" id="btnDelete" value="Xóa">
                <div class="clearfix">

                </div>
            </div>
            <nav style="text-align: center">
                <ul id="ulPagination" class="pagination">
                </ul>
            </nav>
        </div>
    </div>
</div>
<br>
<div class="forms" id="Update-News-Events" style="display: none">
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Chỉnh sửa</h4>
        </div>
        <div class="form-body">
            <form id="formUpdate-News-Events">
                <div class="form-group">
                    <label for="exampleInputEmail1">Tài khoản</label>
                    <input type="text" disabled class="form-control" id="txtUsername" placeholder="Tài khoản">
                    <input type="hidden" name="idUpdate" id="txtIdUpdate">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1" id="lblType">Kiểu</label>
                    <select class="form-control" id="slType" name="type">
                        <option value="">---Chọn---</option>
                        <option value="1">Sự Kiện</option>
                        <option value="0">Tin Tức</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1" id="lblTitle">Tiêu đề</label>
                    <textarea class="form-control" rows="2" name="title" id="txtTitle"></textarea>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1" id="lblContent">Nội Dung</label>
                    <textarea class="form-control" rows="10" name="content" id="txtContent"></textarea>
                </div>
                <div class="form-group" id="messageError" style="display: none;">
                    <label for="exampleInputEmail1" id="lblMessage" style="color: red; font-weight: bold">

                    </label>
                </div>
                <div class="sub_home">
                    <input type="button" class="btn btn-primary" id="btnUpdate" value="Chỉnh sửa">
                    <div class="clearfix">

                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="js/controllers/admin/news-events.js"></script>
</div>